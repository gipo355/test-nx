# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t test-node`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system test-node && \
          adduser --system -G test-node test-node

COPY dist/apps/test-node test-node
RUN chown -R test-node:test-node .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix test-node --omit=dev -f install

CMD [ "node", "test-node" ]
