{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    // outdir need to go here to build in the subProject
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": ".",
    "outDir": "./dist"
    // "declarationDir": "./dist/types",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.cts",
    "src/**/*.mts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.cjs",
    "src/**/*.mjs",
    "src/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-dist",
    "**/typedoc",
    "docs"
  ]
}
